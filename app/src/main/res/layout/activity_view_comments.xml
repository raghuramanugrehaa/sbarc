    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        tools:context="info.androidhive.navigationdrawer.activity.post_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/first">
            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/image"
                android:layout_width="86dp"
                android:layout_height="86dp"

                android:layout_marginTop="3dp"
                android:src="@drawable/user" />



            <TextView
                android:id="@+id/title"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="13dp"
                android:paddingTop="2dp"

                android:text="jhvgvclus"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="35dp"
                android:background="#8C000000" />


            <TextView
                android:id="@+id/time"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="45dp"
                android:paddingTop="2dp"

                android:text="22/11/2017 08:33:33"
                />
            <TextView
                android:id="@+id/desc"
                android:layout_marginTop="95dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"




                android:text="Enter a question or keywords in the search box and get answers from Microsoft, the web, and Cortana. (Note: Cortana is only available in certain countries/regions, and some Cortana features might not be available everywhere.)"
                />

        </RelativeLayout>




    </RelativeLayout>




